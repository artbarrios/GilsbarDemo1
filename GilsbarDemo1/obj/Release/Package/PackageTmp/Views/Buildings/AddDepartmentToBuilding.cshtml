@model GilsbarDemo1.Models.BuildingDepartmentViewModel

@{
    ViewBag.Title = "AddDepartmentToBuilding";
}

<h2>Building: @Html.DisplayFor(model => model.Building_Name)</h2>
<h4>Add Department To Building</h4>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.HiddenFor(model => model.BuildingId)
        @Html.HiddenFor(model => model.Building_Name)

        @if (((SelectList)ViewBag.DepartmentId).Count() > 0)
        {
            <div class="form-group">
                @Html.LabelFor(model => model.Department_Name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("DepartmentId", null, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        }
        else
        {
            <div class="form-group">
                <div class="col-md-offset-1 col-md-10">
                    @Html.Raw("<b>All available Departments have been added to this Building.</b>")
                </div>
            </div>
        }
    </div>
}

<div>
    @Html.ActionLink("Back to Building Detail", "Details", new { id = Model.BuildingId } )
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}