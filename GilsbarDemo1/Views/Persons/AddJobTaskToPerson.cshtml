@model GilsbarDemo1.Models.JobTaskPersonViewModel

@{
    ViewBag.Title = "AddJobTaskToPerson";
}

<h2>Person: @Html.DisplayFor(model => model.Person_Firstname)</h2>
<h4>Add Job Task To Person</h4>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.HiddenFor(model => model.PersonId)
        @Html.HiddenFor(model => model.Person_Firstname)

        @if (((SelectList)ViewBag.JobTaskId).Count() > 0)
        {
            <div class="form-group">
                @Html.LabelFor(model => model.JobTask_Name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("JobTaskId", null, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        }
        else
        {
            <div class="form-group">
                <div class="col-md-offset-1 col-md-10">
                    @Html.Raw("<b>All available Job Tasks have been added to this Person.</b>")
                </div>
            </div>
        }
    </div>
}

<div>
    @Html.ActionLink("Back to Person Detail", "Details", new { id = Model.PersonId } )
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}